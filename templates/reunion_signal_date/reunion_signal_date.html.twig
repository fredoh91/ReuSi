{% extends 'base.html.twig' %}

{% block title %}Gestion des dates de réunions{% endblock %}

{% block body %}
<div class="container-fluid mt-4 page-reunion-signal-date">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Gestion des dates de réunions</h1>
        <a href="{{ path('app_reunion_signal_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-1"></i>
            Ajouter une nouvelle date
        </a>
    </div>

    {# ... Le formulaire de recherche reste ici ... #}
    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-search"></i> Recherche
        </div>
        <div class="card-body">
            {{ form_start(searchForm, {'attr': {'class': 'row g-3 align-items-end'}})}} 
                <div class="col-md-3">{{ form_row(searchForm.dateDebut) }}</div>
                <div class="col-md-3">{{ form_row(searchForm.dateFin) }}</div>
                <div class="col-md-4">{{ form_row(searchForm.recherche) }}</div>
                <div class="col-md-2">
                    <div class="d-grid gap-2">
                        {{ form_widget(searchForm.rechercher) }}
                        {{ form_widget(searchForm.reinitialiser) }}
                    </div>
                </div>
            {{ form_end(searchForm) }}
        </div>
    </div>

    {# Affichage des messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% if pagination.getTotalItemCount > 0 %}
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Date de Réunion</th>
                    <th>Jour</th>
                    <th>Statut</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for reunionSignal in pagination %}
                    <tr>
                        <td>
                            {{ reunionSignal.DateReunion ? reunionSignal.DateReunion|format_datetime(dateFormat='long', timeFormat='none', locale='fr') : '---' }}
                        </td>
                        <td>
                            {{ reunionSignal.DateReunion ? reunionSignal.DateReunion|format_datetime(pattern="EEEE", timeFormat='none', locale='fr')|capitalize : '---' }}
                        </td>
                        <td>
                            {% if reunionSignal.ReunionAnnulee %}
                                <span class="badge bg-danger">Annulée</span>
                            {% else %}
                                <span class="badge bg-success">Prévue</span>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <a href="{{ path('app_reunion_signal_edit', {'id': reunionSignal.id}) }}" class="btn btn-sm btn-warning me-2">
                                <i class="bi bi-pencil-fill"></i> Modifier
                            </a>

                            {# Le formulaire de suppression est maintenant caché et sera soumis par la modale #}
                            <form method="post" action="{{ path('app_reunion_signal_delete', {'id': reunionSignal.id}) }}" id="delete-form-{{ reunionSignal.id }}" style="display: none;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reunionSignal.id) }}">
                            </form>

                            {# Ce bouton ouvre la modale de confirmation #}
                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-form-id="delete-form-{{ reunionSignal.id }}">
                                <i class="bi bi-trash-fill"></i> Supprimer
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="navigation d-flex justify-content-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <div class="alert alert-info mt-3">
            {# On vérifie si le formulaire a été soumis pour adapter le message #}
            {% if app.request.query.has('rech_reunion_signal') %}
                Aucune réunion ne correspond à votre recherche.
            {% else %}
                Aucune réunion trouvée.
            {% endif %}
        </div>
    {% endif %}
</div>

{# -- Modale de confirmation de suppression -- #}
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmation de suppression</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Êtes-vous sûr de vouloir supprimer cette réunion ? Cette action est irréversible.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        {# Ce bouton soumettra le bon formulaire #}
        <button type="button" class="btn btn-danger" id="confirm-delete-button">Supprimer</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
	{{ encore_entry_script_tags('ReunionSignalDate') }}
{% endblock %}
