{% extends 'base.html.twig' %}

{% block title %}Signal
{% endblock %}

{% block body %}

<div class="container-md">

	{% if signal is not empty %}
		<div class="display-4 text-center mt-0 mb-0">{{ signal.titre }}</div>
		{{ signal.id }}
		{{ signal.CreatedAt|date('d/m/Y H:i') }}
		{{ signal.UpdatedAt|date('d/m/Y H:i') }}
		{{ signal.UserCreate }}
		{{ signal.UserModif }}
		{{ signal.DescriptionSignal }}

		{% if lstRDD is not empty %}
			<h3>Relevé de décision</h3>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th scope="col">Numéro de RDD</th>
						<th scope="col">Description</th>
					</tr>
				</thead>
				<tbody>
					{% for rdd in lstRDD %}
						<tr>
							<th scope="row">{{ rdd.NumeroRDD }}</th>
							<td>{{ rdd.DescriptionRDD }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% else %}
			<p>Pas de relevé de décision</p>
		{% endif %}

		{% if lstProduits is not empty %}
			<h3>Produits associés</h3>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Dénomination</th>
						<th scope="col">DCI</th>
						<th scope="col">Dosage</th>
						<th scope="col">Code ATC</th>
						<th scope="col">Code CIS</th>
					</tr>
				</thead>
				<tbody>
					{% for produit in lstProduits %}
						<tr>
							<th scope="row">{{ produit.id }}</th>
							<td>{{ produit.Denomination }}</td>
							<td>{{ produit.DCI }}</td>
							<td>{{ produit.Dosage }}</td>
							<td>{{ produit.CodeATC }}</td>
							<td>{{ produit.CodeCIS }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% else %}
			<p>Pas de produits associés</p>
		{% endif %}
	{% endif %}

</div>
