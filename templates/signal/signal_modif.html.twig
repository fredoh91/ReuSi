{% extends 'base.html.twig' %}

{% block body_class %}
    {% if signal.TypeSignal == 'signal' %}
        page-signal
    {% elseif signal.TypeSignal == 'fait_marquant' %}
        page-fait-marquant
    {% endif %}
{% endblock %}

{% block title %}Signal
{% endblock %}

{% block body %}

{{ encore_entry_link_tags('rdd_css') }}
	{# Affichage des messages flash #}
	{% for type, messages in app.flashes %}
		{% for message in messages %}
			{% if type == 'error' %}
				<div class="alert alert-danger">{{ message }}</div>
			{% elseif type == 'success' %}
				<div class="alert alert-success">{{ message }}</div>
			{% elseif type == 'warning' %}
				<div class="alert alert-warning">{{ message }}</div>
			{% else %}
				<div class="alert alert-info">{{ message }}</div>
			{% endif %}
		{% endfor %}
	{% endfor %}


    {% if signal.TypeSignal == 'signal' %}
        <div class="display-4 text-center mt-3 mb-3">Modification du signal</div>
    {% elseif signal.TypeSignal == 'fait_marquant' %}
        <div class="display-4 text-center mt-3 mb-3">Modification du fait marquant</div>
    {% endif %}


<div class="container-md">
    {{ form_start(form) }}

    <div class="row g-3">
        <!-- Card Signal -->
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi"></i>
                            {% if signal.TypeSignal == 'signal' %}
                                Signal
                            {% elseif signal.TypeSignal == 'fait_marquant' %}
                                Fait marquant
                            {% endif %}
                    </h5>
                </div>
                <div class="card-body">

                    {# Titre #}
                    <div class="row">
                        <div class="col-12">{{ form_label(form.signal.Titre, 'Titre') }}</div>
                    </div>
                    <div class="row">
                        <div class="col-12">{{ form_widget(form.signal.Titre) }}</div>
                    </div>

                    {# Description, Indication et contexte #}
                    <div class="row">
                        <div class="col-4">{{ form_label(form.signal.Indication, 'Indication') }}</div>
                        <div class="col-4">{{ form_label(form.signal.DescriptionSignal, 'Description du signal') }}</div>
                        <div class="col-4">{{ form_label(form.signal.Contexte, 'Contexte') }}</div>
                    </div>
                    <div class="row">
                        <div class="col-4">{{ form_widget(form.signal.Indication) }}</div>
                        <div class="col-4">{{ form_widget(form.signal.DescriptionSignal) }}</div>
                        <div class="col-4">{{ form_widget(form.signal.Contexte) }}</div>
                    </div>

                    {# Source du signal #}
                    <div class="row">
                        <div class="col-2">{{ form_label(form.signal.SourceSignal, 'Source du signal') }}</div>
                        <div class="col-2">{{ form_label(form.signal.RefSignal, 'Référence du signal') }}</div>
                        <div class="col-2">{{ form_label(form.signal.IdentifiantSource, 'Identifiant source') }}</div>
                    </div>
                    <div class="row">
                        <div class="col-2">{{ form_widget(form.signal.SourceSignal) }}</div>
                        <div class="col-2">{{ form_widget(form.signal.RefSignal) }}</div>
                        <div class="col-2">{{ form_widget(form.signal.IdentifiantSource) }}</div>
                    </div>

                    {# Données portées par le suivi initial : Émetteur, Pilote, date de la réunion #}
                    <div class="row">
                        <div class="col-2">{{ form_label(form.suiviInitial.EmetteurSuivi, 'Émetteur du signal') }}</div>
                        <div class="col-2">{{ form_label(form.suiviInitial.PiloteDS, 'Pilote du signal') }}</div>
                        <div class="col-2">{{ form_label(form.suiviInitial.reunionSignal, 'Date réunion') }}</div>
                        <div class="col-6">{{ form_label(form.suiviInitial.DescriptionSuivi, 'Description du suivi') }}</div>
                    </div>
                    <div class="row">
                        <div class="col-2">{{ form_widget(form.suiviInitial.EmetteurSuivi) }}</div>
                        <div class="col-2">{{ form_widget(form.suiviInitial.PiloteDS) }}</div>
                        <div class="col-2">{{ form_widget(form.suiviInitial.reunionSignal) }}</div>
                        <div class="col-6">{{ form_widget(form.suiviInitial.DescriptionSuivi) }}</div>
                    </div>





                    {# Direction / Pôle concernés #}
                    <div class="row mt-3">
                        <div class="col-12">
                            <fieldset class="mb-3 border p-3 rounded">
                                <legend class="text-center h5 mb-3">
                                    {{ form.signal.directionPoleConcernes.vars.label }}
                                </legend>
                                <div id="{{ form.signal.directionPoleConcernes.vars.id }}">
                                    {# On boucle sur les groupes créés par l'option 'group_by' #}
                                    {% for group_label, choices in form.signal.directionPoleConcernes.vars.choices %}
                                        <div class="mb-2">
                                            <p class="fw-bold mb-1">{{ group_label }}</p>
                                            <div class="row">
                                                {# Pour chaque groupe, on boucle sur les cases à cocher #}
                                                {% for choice in choices %}
                                                    <div class="col-md-4">
                                                        {{ form_widget(form.signal.directionPoleConcernes[choice.value]) }}
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </fieldset>
                        </div>
                    </div>

                    {# Niveaux de risque #}
                    <div class="row">
                        <div class="col-2">{{ form_label(form.signal.NiveauRisqueInitial, 'Niveau de risque initial') }}</div>
                        <div class="col-2">{{ form_label(form.signal.NiveauRisqueFinal, 'Niveau de risque final') }}</div>
                        <div class="col-8">{{ form_label(form.signal.AnaRisqueComment, "Commentaire de l'analyse de risque") }}</div>
                    </div>
                    <div class="row">
                        <div class="col-2">{{ form_widget(form.signal.NiveauRisqueInitial) }}</div>
                        <div class="col-2">{{ form_widget(form.signal.NiveauRisqueFinal) }}</div>
                        <div class="col-8">{{ form_widget(form.signal.AnaRisqueComment) }}</div>
                    </div>

                </div>
            </div>
        </div>





        <!-- Card Produit -->
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-dark">
                    <h5 class="card-title mb-0">
                        <i class="bi"></i> Produits
                    </h5>
                </div>
                <div class="card-body">

                    {% if lstProduits is not empty %}
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Dénomination</th>
                                    <th>DCI</th>
                                    <th>Dosage</th>
                                    <th>Voie</th>
                                    <th>Type procédure</th>
                                    <th>Code CIS</th>
                                    <th>Code ATC</th>
                                    <th>Libellé ATC</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for produit in lstProduits %}
                                    <tr>
                                        <td>{{ produit.id }}</td>
                                        <td>{{ produit.Denomination }}</td>
                                        <td>{{ produit.DCI }}</td>
                                        <td>{{ produit.Dosage }}</td>
                                        <td>{{ produit.Voie }}</td>
                                        <td>{{ produit.TypeProcedure }}</td>
                                        <td>
                                        {# http://newintranet.ansm-intra.fr/Applis/iMono/prod/ms.php?codeCIS={{ produit.CodeCIS }} - Monographie de la spécialité #}
                                        {# https://agence-prd.ansm.sante.fr/php/ecodex/extrait.php?specid={{ produit.CodeCIS }} -  	Répertoire des Spécialités Pharmaceutiques #}
                                        {# https://base-donnees-publique.medicaments.gouv.fr/medicament/{{ produit.CodeCIS }}/extrait - Base de Données Publiques des Médicaments #}
                                            {% if produit.CodeCIS %}
                                                <a href="http://newintranet.ansm-intra.fr/Applis/iMono/prod/ms.php?codeCIS={{ produit.CodeCIS }}" target="_blank" rel="noopener noreferrer">
                                                    {{ produit.CodeCIS }}
                                                </a>
                                            {% endif %}
                                        </td>
                                        <td>{{ produit.CodeATC }}</td>
                                        <td>{{ produit.LibATC }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p>Aucun produit associé.</p>
                    {% endif %}

                    {# Boutons Produits #}

                    <div class="row">
                        <div class="col-6 d-flex justify-content-center">
                            {{ form_widget(form.signal.ajout_produit) }}
                        </div>
                        <div class="col-6 d-flex justify-content-center">
                            {{ form_widget(form.signal.ajout_produit_saisie_manu) }}
                        </div>
                    </div>

                </div>
            </div>
        </div>


        <!-- Card Suivi -->
        <div class="col-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-card-list"></i> Historique des suivis
                    </h5>
                </div>
                <div class="card-body">

                    {% if lstSuivi is not empty %}
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Numéro de suivi</th>
                                    <th>Date réunion</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for suivi in lstSuivi %}
                                    {% set row_class = 'suivi-inactif' %}
                                    {% if latestSuiviId is defined and suivi.id == latestSuiviId %}
                                        {% set row_class = 'suivi-actif' %}
                                    {% endif %}
                                    <tr class="{{ row_class }}">
                                        <td>
                                            {# <a href="{{ path('app_modif_RDD', {'signalId': signal.id, 'suiviId': suivi.id}) }}"> #}
                                                {{ suivi.NumeroSuivi }}
                                            {# </a> #}
                                        </td>       {#  app_modif_RDD #}
                                        <td>{{ suivi.reunionSignal and suivi.reunionSignal.dateReunion ? suivi.reunionSignal.dateReunion|date('d/m/Y') : '' }}</td>
                                        <td>{{ suivi.DescriptionSuivi }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p>Aucun suivi associé.</p>
                    {% endif %}

                    {# Boutons Suivi #}

                    <div class="row">
                        <div class="col-12 d-flex justify-content-center">
                            {{ form_widget(form.signal.ajout_suivi) }}
                        </div>
                    </div>

                </div>
            </div>
        </div>



        <!-- Card relevé de décision -->
        <div class="col-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-card-checklist"></i> Historique des relevés de décision
                    </h5>
                </div>
                <div class="card-body">

                    {% if lstRDD is not empty %}
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Numéro RDD</th>
                                    <th>Date réunion</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for rdd in lstRDD %}
                                    {% set row_class = 'rdd-inactif' %}
                                    {% if latestRddId is defined and rdd.id == latestRddId %}
                                        {% set row_class = 'rdd-actif' %}
                                    {% endif %}
                                    <tr class="{{ row_class }}">
                                        <td>
                                            <a href="{{ path('app_modif_RDD', {'signalId': signal.id, 'rddId': rdd.id}) }}">
                                                {{ rdd.NumeroRDD }}
                                            </a>
                                        </td>       {#  app_modif_RDD #}
                                        <td>{{ rdd.reunionSignal and rdd.reunionSignal.dateReunion ? rdd.reunionSignal.dateReunion|date('d/m/Y') : '' }}</td>
                                        <td>{{ rdd.DescriptionRDD }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p>Aucun relevé de décision associé.</p>
                    {% endif %}

                    {# Boutons relevé de décision #}

                    {# <div class="row">
                        <div class="col-12 d-flex justify-content-center">
                            {{ form_widget(form.signal.ajout_RDD) }}
                        </div>
                    </div> #}

                </div>
            </div>
        </div>
    </div>

    {# Boutons de validation globaux #}
    <div class="card shadow-sm mt-4">
        <div class="card-body d-flex justify-content-center flex-wrap">
            {{ form_widget(form.signal.validation, {'attr': {'class': 'btn btn-primary m-2 px-5'}}) }}
            {{ form_widget(form.signal.annulation, {'attr': {'class': 'btn btn-secondary m-2 px-5'}}) }}
        </div>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
