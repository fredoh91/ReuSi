{% extends 'base.html.twig' %}

{% block title %}Liste des réunions signal{% endblock %}

{% block body_class 'reunion-signal-liste-bg' %}

{% block body %}

{{ encore_entry_link_tags('reunion_signal_liste_css') }}

{# On ajoute la classe parente ici pour que les styles SCSS puissent s'appliquer #}
<div class="container-fluid mt-4 page-reunion-signal">
    <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Liste des réunions signal</h1>
        <a href="{{ path('app_reunion_signal_new', {'routeSource': 'app_reunion_signal_liste'}) }}" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-1"></i>
            Ajouter une nouvelle date
        </a>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-search"></i> Recherche
        </div>
        <div class="card-body">
            {{ form_start(searchForm, {'attr': {'class': 'row g-3 align-items-end'}}) }}
                <div class="col-md-3">{{ form_row(searchForm.dateDebut) }}</div>
                <div class="col-md-3">{{ form_row(searchForm.dateFin) }}</div>
                <div class="col-md-4">{{ form_row(searchForm.recherche) }}</div>
                <div class="col-md-2">
                    <div class="d-grid gap-2">
                        {{ form_widget(searchForm.rechercher) }}
                        {{ form_widget(searchForm.reinitialiser) }}
                    </div>
                </div>
            {{ form_end(searchForm) }}
        </div>
    </div>

    {% if pagination.getTotalItemCount > 0 %}
        <div class="table-wrapper mt-4">
            <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Date de Réunion</th>
                    <th>Jour</th>
                    <th>Statut</th>
                    <th>Signaux et RDDs associés</th>
                </tr>
            </thead>
            <tbody>
                {% for reunionSignal in pagination %}
                    <tr>
                        <td>
                            {# app_reunion_signal_detail #}
                            <a href="{{ path('app_reunion_signal_detail', {'reuSiId': reunionSignal.id, 'tab': 'nouveaux-signaux'}) }}">
                                {{ reunionSignal.DateReunion ? reunionSignal.DateReunion|format_datetime(dateFormat='short', timeFormat='none', locale='fr') : '---' }}
                                {# {{ rdd.NumeroRDD }} #}
                            </a>
                        </td>
                        <td>
                            {{ reunionSignal.DateReunion ? reunionSignal.DateReunion|format_datetime(pattern="EEEE", timeFormat='none', locale='fr')|capitalize : '---' }}
                        </td>
                        <td>
                            {% if reunionSignal.statutReunion == 'annulee' %}
                                <span class="badge bg-danger">Annulée</span>
                            {% elseif reunionSignal.statutReunion == 'prevue' %}
                                <span class="badge bg-success">Prévue</span>
                            {% elseif reunionSignal.statutReunion == 'realisee' %}
                                <span class="badge bg-info">Réalisée</span>
                            {% endif %}                        
                            {# {% if reunionSignal.ReunionAnnulee %}
                                <span class="badge bg-danger">Annulée</span>
                            {% else %}
                                <span class="badge bg-success">Prévue</span>
                            {% endif %} #}
                        </td>
                        <td>
                            {% set hasContent = false %}
                            
                            {# Afficher uniquement les suivis directs de la réunion #}
                            {% for suivi in reunionSignal.suivis|sort((a, b) => a.NumeroSuivi <=> b.NumeroSuivi) %}
                                {% if suivi.reunionSignal and suivi.reunionSignal.id == reunionSignal.id %}
                                    {% set signal = suivi.SignalLie %}
                                    {% set hasContent = true %}
                                    
                                    <div class="mb-3 pb-2 border-bottom">
                                        {% if signal %}
                                            <p class="mb-0">
                                                <strong>
                                                    {{ signal.TypeSignal == 'fait_marquant' ? 'Fait marquant' : 'Signal' }}
                                                    {# {% set routeSource = signal.TypeSignal == 'signal' ? 'app_signal_liste' : 'app_fait_marquant_liste' %} #}
                                                    <a href="{{ path('app_signal_modif', {
                                                                'signalId': signal.id, 
                                                                'routeSource': 'app_reunion_signal_liste'
                                                            }) }}">
                                                        {{ signal.id }}
                                                    </a>:
                                                </strong>
                                                {{ signal.titre|default('') }}
                                            </p>
                                            
                                            {% if signal.DescriptionSignal %}
                                                <p class="mb-0 text-muted">
                                                    <small><strong>Description:</strong> {{ signal.DescriptionSignal|slice(0, 150) }}{% if signal.DescriptionSignal|length > 150 %}...{% endif %}</small>
                                                </p>
                                            {% endif %}
                                        {% endif %}
                                        
                                        <div class="mt-2 suivi-container">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="w-100">
                                                    <a href="{{ path('app_modif_suivi', {
                                                        'signalId': signal ? signal.id : 0, 
                                                        'suiviId': suivi.id
                                                    }) }}" class="text-decoration-none">
                                                        <i class="bi bi-arrow-return-right me-1"></i>Suivi #{{ suivi.NumeroSuivi }}
                                                    </a>
                                                    
                                                    {% if suivi.DescriptionSuivi %}
                                                        <div class="ms-3 mt-1 text-muted">
                                                            <small>{{ suivi.DescriptionSuivi|nl2br }}</small>
                                                        </div>
                                                    {% endif %}
                                                    
                                                    {% if suivi.RddLie %}
                                                        <div class="ms-3 mt-2">
                                                            <small class="text-muted">
                                                                <i class="bi bi-journal-text me-1"></i>
                                                                <strong>RDD 
                                                                    <a href="{{ path('app_modif_RDD', {
                                                                        'signalId': signal ? signal.id : 0,
                                                                        'rddId': suivi.RddLie.id
                                                                    }) }}">
                                                                        {{ suivi.RddLie.NumeroRDD }}
                                                                    </a>:
                                                                </strong>
                                                                {{ suivi.RddLie.DescriptionRDD|slice(0, 100) }}{% if suivi.RddLie.DescriptionRDD|length > 100 %}...{% endif %}
                                                            </small>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                                
                                                {% if suivi.PiloteDS %}
                                                    <span class="badge bg-info text-dark ms-2">{{ suivi.PiloteDS }}</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            {% else %}
                                <span class="text-muted">Aucun suivi pour cette réunion.</span>
                            {% endfor %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
        <div class="navigation d-flex justify-content-center">
            {# {{ knp_pagination_render(pagination, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }} #}
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <div class="alert alert-info mt-3">
            {# On vérifie si le formulaire a été soumis pour adapter le message #}
            {% if app.request.query.has('rech_reunion_signal') %}
                Aucune réunion ne correspond à votre recherche.
            {% else %}
                Aucune réunion trouvée.
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}
