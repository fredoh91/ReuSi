{% extends 'base.html.twig' %}

{% block title %}Liste des réunions signal{% endblock %}

{% block body %}

{{ encore_entry_link_tags('reunion_signal_liste_css') }}

{# On ajoute la classe parente ici pour que les styles SCSS puissent s'appliquer #}
<div class="container-fluid mt-4 page-reunion-signal">
    <h1>Liste des réunions signal</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-search"></i> Recherche
        </div>
        <div class="card-body">
            {{ form_start(searchForm, {'attr': {'class': 'row g-3 align-items-end'}}) }}
                <div class="col-md-3">{{ form_row(searchForm.dateDebut) }}</div>
                <div class="col-md-3">{{ form_row(searchForm.dateFin) }}</div>
                <div class="col-md-4">{{ form_row(searchForm.recherche) }}</div>
                <div class="col-md-2">
                    <div class="d-grid gap-2">
                        {{ form_widget(searchForm.rechercher) }}
                        {{ form_widget(searchForm.reinitialiser) }}
                    </div>
                </div>
            {{ form_end(searchForm) }}
        </div>
    </div>

    {% if pagination.getTotalItemCount > 0 %}
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Date de Réunion</th>
                    <th>Jour</th>
                    <th>Statut</th>
                    <th>Signaux et RDDs associés</th>
                </tr>
            </thead>
            <tbody>
                {% for reunionSignal in pagination %}
                    <tr>
                        <td>
                            {{ reunionSignal.DateReunion ? reunionSignal.DateReunion|format_datetime(dateFormat='short', timeFormat='none', locale='fr') : '---' }}
                        </td>
                        <td>
                            {{ reunionSignal.DateReunion ? reunionSignal.DateReunion|format_datetime(pattern="EEEE", timeFormat='none', locale='fr')|capitalize : '---' }}
                        </td>
                        <td>
                            {% if reunionSignal.ReunionAnnulee %}
                                <span class="badge bg-danger">Annulée</span>
                            {% else %}
                                <span class="badge bg-success">Prévue</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if reunionSignal.releveDeDecision is not empty %}
                                <ul class="list-unstyled mb-0">
                                    {% for rdd in reunionSignal.releveDeDecision %}
                                        {% set signal = rdd.SignalLie %}
                                        {% if signal %}
                                            <li class="mb-3 pb-2 border-bottom">
                                                <p class="mb-0">

                                                    <strong>
                                                        {% if signal.TypeSignal == 'signal' %} 
                                                            Signal
                                                        {% elseif signal.TypeSignal == 'fait_marquant' %}
                                                            Fait marquant
                                                        {% else %}
                                                            Signal
                                                        {% endif %}

                                                        <a href="{{ path('app_signal_modif', {'signalId': signal.id}) }}">{{ signal.id }}</a> :
                                                    
                                                    </strong> {{ signal.titre }}
                                                </p>
                                                {% if signal.DescriptionSignal %}
                                                <p class="mb-0 text-muted">
                                                    <small><strong>Description:</strong> {{ signal.DescriptionSignal|slice(0, 150) }}{% if signal.DescriptionSignal|length > 150 %}...{% endif %}</small>
                                                </p>
                                                {% endif %}
                                                <p class="mb-0 text-muted">
                                                    <small><strong>RDD <a href="{{ path('app_modif_RDD', {'signalId': signal.id, 'rddId': rdd.id}) }}">{{ rdd.NumeroRDD }}</a>:</strong> {{ rdd.DescriptionRDD|slice(0, 150) }}{% if rdd.DescriptionRDD|length > 150 %}...{% endif %}</small>
                                                </p>
                                            </li>
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <span class="text-muted">Aucun signal/RDD pour cette réunion.</span>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="navigation d-flex justify-content-center">
            {# {{ knp_pagination_render(pagination, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }} #}
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <div class="alert alert-info mt-3">
            {# On vérifie si le formulaire a été soumis pour adapter le message #}
            {% if app.request.query.has('rech_reunion_signal') %}
                Aucune réunion ne correspond à votre recherche.
            {% else %}
                Aucune réunion trouvée.
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}
