
{% if currentTab == 'nouveaux-signaux' %}
    {% set libelleCard = 'Nouveaux signaux liés a cette réunion' %}
    {% set libelleSignal = 'signal' %}
{% elseif currentTab == 'suivis-signaux' %}
    {% set libelleCard = 'Suivi de signaux liés a cette réunion' %}
    {% set libelleSignal = 'signal' %}
{% elseif currentTab == 'nouveaux-fm' %}
    {% set libelleCard = 'Nouveaux faits marquants liés a cette réunion' %}
    {% set libelleSignal = 'fait marquant' %}
{% elseif currentTab == 'suivis-fm' %}
    {% set libelleCard = 'Suivi de faits marquants liés a cette réunion' %}
    {% set libelleSignal = 'fait marquant' %}
{% endif %}



<div class="card mt-5 border-success">
    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-archive me-2"></i>{{ libelleCard }}
        </h5>

    </div>
    <div class="card-body card-sig-lie-bg">
        {% if suiviLies is not empty %}
            {% for suivi in suiviLies %}
                {% set signal = suivi.SignalLie %}
                <div class="card mb-3" id="suivi-{{ suivi.id }}">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <a href="{{ path('app_signal_modif', {'signalId': signal.id, 'routeSource': 'app_reunion_signal_detail', 'reuSiId': suivi.reunionSignal.id, 'tab': currentTab }) }}">
                                {{ signal.TypeSignal == 'fait_marquant' ? 'Fait Marquant' : 'Signal' }} n°{{ signal.id }} : {{ signal.Titre }}
                            </a>
                        </h5>
                        {% if suivi.PiloteDS %}
                            <span class="badge bg-info text-dark">{{ suivi.PiloteDS }}</span>
                        {% endif %}
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6><a href="{{ path('app_modif_suivi', {'signalId': signal.id, 'suiviId': suivi.id, 'routeSource': 'app_reunion_signal_detail', 'reuSiId': suivi.reunionSignal.id, 'tab': currentTab }) }}">Suivi n°{{ suivi.NumeroSuivi }}</a></h6>
                                <p class="card-text"><small class="text-muted">{{ suivi.DescriptionSuivi|nl2br }}</small></p>
                            </div>
                            {% if suivi.RddLie %}
                            {% set rdd = suivi.RddLie %}
                            <div class="col-md-6">
                                {# <h6><a href="{{ path('app_modif_RDD', {'signalId': signal.id, 'rddId': rdd.id, 'routeSource': 'app_reunion_signal_detail'}) }}">Relevé de Décision #{{ rdd.NumeroRDD }}</a></h6> #}
                                <h6>Relevé de Décision n°{{ rdd.NumeroRDD }}</h6>
                                <p class="card-text"><small class="text-muted">{{ rdd.DescriptionRDD|nl2br }}</small></p>
                                
                                {% if rdd.mesuresRDDs is not empty %}
                                    <h6 class="mt-3">Mesures associées</h6>
                                    <ul class="list-group list-group-flush">
                                    {% for mesure in rdd.mesuresRDDs %}
                                        <li class="list-group-item d-flex justify-content-between align-items-start">
                                            <div class="ms-2 me-auto">
                                                <div class="fw-bold">{{ mesure.LibMesure }}</div>
                                                {{ mesure.DetailCommentaire }}
                                            </div>
                                        </li>
                                    {% endfor %}
                                    </ul>
                                {% endif %}
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
            {% endfor %}
        {% else %}
            <div class="alert alert-light text-center" role="alert">
                <h2>Aucun {{ libelleSignal }} prévu pour cette réunion.</h2>
            </div>
        {% endif %}
    </div>
</div>