            {{ form_widget(form.url, {'attr': {'class': 'form-control', 'placeholder': 'URL'}}) }}
            {{ form_errors(form.url) }}
        </div>
    </div>
    <div class="col-2 text-end">
        {# Le bouton de suppression sera injecté ici par le contrôleur Stimulus #}
    </div>
</div>