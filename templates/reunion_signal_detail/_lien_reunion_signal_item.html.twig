<div class="lien-item d-flex align-items-center mb-1 p-1 border rounded w-100" data-liens-reunion-signal-target="item">
    <div class="row g-2 flex-grow-1 align-items-center">
        <div class="col-5">
            {{ form_widget(form.libelle, {'attr': {'class': 'form-control', 'placeholder': 'Libellé du lien'}}) }}
            {{ form_errors(form.libelle) }}
