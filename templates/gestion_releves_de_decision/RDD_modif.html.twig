{% extends 'base.html.twig' %}

{% block title %}Relevé de Décision{% endblock %}

{% block body %}


{# Affichage des messages flash #}
{% for type, messages in app.flashes %}
    {% for message in messages %}
        {% if type == 'error' %}
            <div class="alert alert-danger">{{ message }}</div>
        {% elseif type == 'success' %}
            <div class="alert alert-success">{{ message }}</div>
        {% elseif type == 'warning' %}
            <div class="alert alert-warning">{{ message }}</div>
        {% else %}
            <div class="alert alert-info">{{ message }}</div>
        {% endif %}
    {% endfor %}
{% endfor %}


<div class="container-md mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    {% if TypeModifCreation == 'modification' %}
                        <h5 class="mb-0">Modifier un relevé de décision</h5>
                    {% elseif TypeModifCreation == 'creation' %}
                        <h5 class="mb-0">Créer un relevé de décision</h5>
                    {% else %}
                        <h5 class="mb-0">Créer / Modifier un relevé de décision</h5>
                    {% endif %}
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_label(form.NumeroRDD, 'Numéro de RDD') }}
                            {{ form_widget(form.NumeroRDD) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.reunionSignal, 'Date de la réunion') }}
                            {{ form_widget(form.reunionSignal) }}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            {{ form_label(form.DescriptionRDD, 'Description') }}
                            {{ form_widget(form.DescriptionRDD) }}
                        </div>
                    </div>


                    <div class="row mb-3">
                        <div class="col-4">
                            {{ form_label(form.PassageCTP, 'Passage en CTP') }}
                            {{ form_widget(form.PassageCTP) }}
                        </div>
                        <div class="col-4">
                            {{ form_label(form.PassageRSS, 'Passage en RSS') }}
                            {{ form_widget(form.PassageRSS) }}
                        </div>
                        <div class="col-4">
                            {{ form_label(form.EmetteurSuivi, 'Emetteur') }}
                            {{ form_widget(form.EmetteurSuivi) }}
                        </div>
                    </div>


                    <div class="row mt-4">
                        <div class="col-6 d-flex justify-content-center">
                            {{ form_widget(form.validation) }}
                        </div>
                        <div class="col-6 d-flex justify-content-center">
                            {{ form_widget(form.annulation) }}
                        </div>
                    </div>


                    {% if lstMesures is not empty %}
                        <div class="card shadow-sm mt-4" style="background-color: #ced4da;">
                            <div class="card-header bg-secondary text-white">
                                <h5 class="mb-0">Mesures associées au RDD</h5>
                            </div>
                            <div class="card-body">
                                <table class="table table-striped table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th scope="col">Libellé</th>
                                            <th scope="col">Détails/Commentaires</th>
                                            <th scope="col">Date clôture prév.</th>
                                            <th scope="col">Date clôture eff.</th>
                                            <th scope="col">Modif.</th>
                                            <th scope="col">Clôture</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for mesure in lstMesures %}
                                            <tr>
                                                <td>{{ mesure.LibMesure }}</td>
                                                <td>{{ mesure.DetailCommentaire }}</td>
                                                <td>{{ mesure.DateCloturePrev ? mesure.DateCloturePrev|date('d/m/Y') : '' }}</td>
                                                <td>{{ mesure.DateClotureEffective ? mesure.DateClotureEffective|date('d/m/Y') : '' }}</td>
                                                <td>
                                                    <a href="{{ path('app_modif_mesure', {'signalId': signalId, 'rddId': form.vars.data.id, 'mesureId': mesure.id}) }}" class="btn btn-sm btn-primary">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </a>
                                                </td>
                                                <td>
                                                    <button class="btn btn-sm btn-success">
                                                        <i class="bi bi-check-square"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-info mt-3">
                            Aucune mesure n'est actuellement associée à ce relevé de décision.
                        </div>
                    {% endif %}



                    <div class="row mt-4">
                        <div class="col-12 d-flex justify-content-center">
                            {{ form_widget(form.ajout_mesure) }}
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">



        {% if form.vars.data.id is defined %}
            {% set idRDD_en_cours = form.vars.data.id %}
        {% endif %}


        <div class="col-lg-8">
            {% if autresRDDs is not empty %}
                <div class="card shadow-sm">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">Autres relevés de décision liés au signal</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Numéro de RDD</th>
                                    <th scope="col">Date de la réunion</th>
                                    <th scope="col">Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for rdd in autresRDDs %}



                                    {% if rdd.id != idRDD_en_cours %}
                                        <tr>
                                            <th scope="row">{{ rdd.NumeroRDD }}</th>
                                            <td>{{ rdd.reunionSignal.dateReunion ? rdd.reunionSignal.dateReunion|date('d/m/Y') : 'Date inconnue' }}</td>
                                            <td>{{ rdd.DescriptionRDD }}</td>
                                        </tr>

                                    {% endif %}


                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-info mt-3">
                    Pas d'autre(s) relevé(s) de décision lié(s) à ce signal.
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
